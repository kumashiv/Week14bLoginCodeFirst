
@{
    ViewData["Title"] = "GetDeactivatedUserData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using Microsoft.AspNetCore.Http
@{
    var userRole = Context.Session.GetString("userRole");
}

<h1>GetDeactivatedUserData</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr class="table-primary">
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Role</th>
            @if (@userRole == "SuperAdmin")
            {
                <th>Delete</th>
            }
            <th>Update</th>
            <th>isActive</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.Role</td>
                @if (@userRole == "SuperAdmin")
                {
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                }
                <td><a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id">Update</a></td>

                <td><a asp-controller="Home" asp-action="ActivateUser" asp-route-id="@item.Id">Deactivate</a></td>



            </tr>
        }
    </tbody>
</table>