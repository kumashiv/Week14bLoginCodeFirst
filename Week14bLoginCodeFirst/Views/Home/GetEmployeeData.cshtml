
@{
    ViewData["Title"] = "GetEmployeeData";
}

<h1>GetEmployeeData</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr class="table-primary">
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Role</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.Role</td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                <td><a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id">Update</a></td>

            </tr>
        }
    </tbody>
</table>