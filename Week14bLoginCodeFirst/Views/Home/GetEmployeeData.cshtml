
@{
    ViewData["Title"] = "GetEmployeeData";
}

@using Microsoft.AspNetCore.Http
@{
    var userRole = Context.Session.GetString("userRole");
}

<style>
    a:link {
        text-decoration: none;
        color:cadetblue;
    }

    a:visited {
        text-decoration: none;
        color: cadetblue;
    }
</style>

<h1>Get Active Users Data</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr class="table-primary">
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Role</th>
            
            @if (@userRole == "SuperAdmin" || @userRole == "Admin")
            {
                <th>Update</th>
            }
            @if (@userRole == "SuperAdmin")
            {
                <th>Delete</th>
                <th>isActive</th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.Role</td>


                @if (@userRole == "SuperAdmin" || @userRole == "Admin")
                {
                    <td><a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                }
                @if (@userRole == "SuperAdmin")
                {
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    <td><a asp-controller="Home" asp-action="ActivateUser" asp-route-id="@item.Id">Deactivate</a></td>
                }

                
                
                @* @if (@userRole == "SuperAdmin")
                {
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                }
                <td><a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id">Update</a></td>

                <td><a asp-controller="Home" asp-action="ActivateUser" asp-route-id="@item.Id">Deactivate</a></td>
 *@
                

            </tr>
        }
    </tbody>
</table>