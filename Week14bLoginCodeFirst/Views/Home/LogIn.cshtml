@model Week14bLoginCodeFirst.Models.Employee


@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<style>
    .fields, label {
        width: 100px;
    }
</style>

<form class="form-horizontal" asp-controller="Home" asp-action="LogIn">
    <h1>LogIn</h1>

    <label class="fields">Email</label>
    <input type="text" asp-for="Email" /><br /><br />
    <label>Password</label>
    <input type="text" asp-for="Password" />

    <br /><br />

    <button type="Submit">Login</button>
</form>


